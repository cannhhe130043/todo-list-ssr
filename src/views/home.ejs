<body>
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="todolist not-done">
                    <div class="welcome">
                        <h3>Hi <label class="username"><%= username %></label>, you have <%= tasks.length %>
                            <% if(tasks.length > 1){ %>
                            tasks
                            <% }else{ %>
                            task
                            <% } %>
                            to work</h3> <button class="btn btn-success">Logout&nbsp;<i class="fa fa-sign-out"></i></button>
                    </div>
                    <form action="/addTask" method="POST">
                        <div class="add-task">
                            <input name="title" required type="text" class="form-control add-todo"
                                placeholder="Add todo">
                            <button type="submit" class="btn btn-success">Add task</button>
                        </div>
                    </form>
                    <hr>
                    <ul id="sortable" class="list-unstyled">
                        <li class="ui-state-default">
                            <div class="checkbox">
                                <% tasks.forEach(task => { %>
                                <form action="/deleteTask/<%= task.id %>">
                                    <div class="task">
                                        <i class="fa fa-tasks"></i><label><%= task.title %></label>
                                        <button type="submit" class="btn btn-success"><i class="fa fa-check" style="color: green;font-size: 10px;"></i>&nbsp;Mask as done</button></a>
                                    </div>
                                    <hr>
                                </form>
                                <% }) %>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>
